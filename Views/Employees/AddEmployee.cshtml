<br />

<form method="post" action="addEmployee" enctype="multipart/form-data">
    <div class="form-group">
        <label for="empName">Employee Name</label>
        <input type="text" class="form-control" id="empName" value="@Model.empName" name="empName" placeholder="Enter employee name">
    </div>
    <div class="form-group">
        <label for="depName">Department</label>
        @*<input type="text" class="form-control" id="depName" name="depName" placeholder="Enter department name">*@
    <select id="depId" class="form-control" name="depId">
        <option value="" tabindex="0">Select Department</option>
        @foreach (var item in ViewBag.departments as List<ControlExamples.EF.tblDepartment>)
        {
            if (item.depId == Model.depId)
            {
                <option value="@item.depId" selected="selected">@item.depName</option>
            }
            else
            {
                <option value="@item.depId">@item.depName</option>
            }
        }
    </select>
    </div>
    <div class="form-group">
        <label for="designation">designation</label>
        @*<input type="text" id="designation" class="form-control" name="designation">*@
    <select id="designation" class="form-control" name="designation">
        <option value="" tabindex="0">Select Designation</option>
        <option value="Accountant">Accountant</option>
        <option value="Manager">Manager</option>
        <option value="Jr. Developer">Jr. Developer</option>
        <option value="Sr. Developer">Sr. Developer</option>
    </select>
    </div>
    <div class="form-group">
        <label for="designation">Hobbies</label>
        <br />
        @{var hobbies = Model.hobbies.Split(','); }
        @foreach (var item in ViewBag.hobbies)
        {
            foreach (var hby in hobbies)
            {
                if (item == hby)
                {
                    <input type="checkbox" name="hby" value="@item" checked="checked"/>@item
                }
                else
                {
                    continue;
                    <input type="checkbox" name="hby" value="@item" />@item
                }
            }

        }

    </div>
    <div class="form-group">
        <label for="designation">Who am I?</label>
        <br />
        <input type="radio" name="rdo" value="Male" /> Male
        <input type="radio" name="rdo" value="Female" /> Female

    </div>
    <div class="form-group">
        <label for="empPhoto">Upload Photo</label>
        <br />
        <input type="file" name="uploadedFiles"/>

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="reset" class="btn btn-default">Reset</button>
</form>

