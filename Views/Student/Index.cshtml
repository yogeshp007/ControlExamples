@model IEnumerable<ControlExamples.Models.tblStudent>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Student Info", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Student Name
        </th>
        <th>
            Address
        </th>
        <th>
           City
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StuName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StuAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        <td>
            @Html.ActionLink("Edit Info", "Edit", new { id=item.Id }) |
            @Html.ActionLink("View Student", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
